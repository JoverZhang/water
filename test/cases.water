// function
fn fibonacci(n: i32) -> i32 {
  if (n == 1 || n == 2) { return 1; }
  return fibonacci(n - 1) + fibonacci(n - 2);
}
fn test_function(t: Testing) -> void {
  test_assert(55 == fibonacci(10));
}

