///////////////////////////////////////////////////////////////////////////////
// for loop
fn test_for_loop(t: Testing) -> void {
  for (let i = 0; i <= 100; i++) { i++; }

  let n = 0;
  for (let i = 0; i <= 100; i++) { n += i; }
  test_assert(5050 == n);
}

///////////////////////////////////////////////////////////////////////////////
// do while loop
fn test_while_loop(t: Testing) -> void {
  let n = 0; let i = 0;
  while (i <= 100) { n += i; i++; }
  test_assert(5050 == n);

  n = 0; i = 0;
  do { n += i; i++; } while (i <= 100);
  test_assert(5050 == n);
}

