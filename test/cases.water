// delegate
delegate fn DelegateF2I(f: f64) -> i32;
fn f2i(f: f64) -> i32 { return f; }
struct DelegateClass {
  pub f: DelegateF2I;
}
fn test_delegate(t: Testing) -> void {
  let f: DelegateF2I = f2i;
  test_assert(42 == f(42.2));

  let o = DelegateClass{ f: f2i };
  let g = o.f;
  test_assert(42 == g(42.2));
}

