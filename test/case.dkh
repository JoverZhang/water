// for loop
void test_for_loop() {
  let n = 0;
  let i: int;
  for (i = 0; i <= 100; i++) { n += i; }
  test_assert(5050 == n);

  println("success: test_for_loop()");
}
test_for_loop();

///////////////////////////////////////////////////////////////////////////////
// do while loop
void test_while_loop() {
  let n = 0; let i = 0;
  while (i <= 100) { n += i; i++; }
  test_assert(5050 == n);

  n = 0; i = 0;
  do { n += i; i++; } while (i <= 100);
  test_assert(5050 == n);

  println("success: test_while_loop()");
}
test_while_loop();

