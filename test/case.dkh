///////////////////////////////////////////////////////////////////////////////
// delegate
delegate int DelegateF2I(double f);
int f2i(double f) { return f; }
class DelegateClass {
  public DelegateF2I f;
}
void test_delegate() {
  let f: DelegateF2I = f2i;
  test_assert(42 == f(42.2));

  let o = new DelegateClass();
  o.f = f2i;
  let g = o.f;
  test_assert(42 == g(42.2));

  println("success: test_delegate()");
}
test_delegate();

