// function
int fibonacci(int n) {
  if (n == 1 || n == 2) { return 1; }
  return fibonacci(n - 1) + fibonacci(n - 2);
}
void test_function() {
  test_assert(55 == fibonacci(10));

  println("success: test_function()");
}
test_function();

